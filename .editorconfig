# For configuring supported editors

# This is the top-most EditorConfig file
root = true

# Defaults for all files
[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# Python overrides
[*.py]
indent_style = space
indent_size = 4
max_line_length = 79
charset = utf-8

# Makefile overrides
[Makefile]
indent_style = tab
max_line_length = 80
